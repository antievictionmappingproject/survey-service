{
	"_links": {
        "self": { "href": "<%= @representation.self %>" }
    },
    "_embedded": {
    	"surveys": [
        	<% 
            all = @representation.surveys
            last = all.pop
            all.each do |survey| 
            %>
    		{
				"_links": {
					"self": { "href": "<%= survey.self %>" }
				}
			},
			<% 
            end 

            unless last.nil?
            %>
            {
                "_links": {
                    "self": { "href": "<%= last.self %>" }
                }
            }
            <% end %>
        ]
    }
}